<div>
  <div>
    <h1>
      <%= @the_event.name %> Tasks
    </h1>

    <div>
      <div>
        <a href="/events">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_event/<%= @the_event.id %>">
          Delete event
        </a>
      </div>
    </div>

<hr>

<div>
  <div>
    <h4>
      Edit event
    </h4>

    <form action="/modify_event/<%= @the_event.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_event.name %>">
      </div>

      <button>
        Update event
      </button>
    </form>
  </div>
</div>

<hr>

  <div>
    <h4>
      Add task
    </h4>
      <form action="/insert_task" method="post">
        <div>

          <input type="hidden" id="event_id_box" name="query_event_id" value="<%= @the_event.id %>">
        </div>

        <div>
          <label for="description_box">
            Description
          </label>

          <input type="text" id="description_box" name="query_description">
        </div>

        <div>
          <label for="user_id_box">
            User
          </label>

          <input type="text" id="user_id_box" name="query_user_id">
        </div>

        <div>
          <label for="due_date_box">
            Due date
          </label>

          <input type="date" id="due_date_box" name="query_due_date">
        </div>

        <div>
          <label for="status_id_box">
            Status
          </label>

          <input type="text" id="status_id_box" name="query_status_id">
        </div>

        <button>
          Create task
        </button>
      </form>
  </div>
<hr>
